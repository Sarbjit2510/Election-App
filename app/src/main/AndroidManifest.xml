<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ieglobe.electionapp">

    <uses-permission-sdk-23 android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBarBlue" />
        <activity
            android:name=".activities.SplashScreen"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBarBlue">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.LoginType"
            android:label="@string/title_activity_login_type"
            android:theme="@style/AppTheme.NoActionBarBlue" />
        <activity
            android:name=".activities.Login"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBarBlue"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activities.Register"
            android:label="@string/title_activity_register"
            android:theme="@style/AppTheme.NoActionBarBlue"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".activities.Gallery_View" />
        <activity
            android:name=".activities.Video_Play"
            android:label="@string/title_activity_video__play"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.Create_Group"
            android:label="@string/title_activity_create__group"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activities.Time_Tracker" />
        <activity
            android:name=".activities.Candidate_Home"
            android:label="@string/title_activity_candidate__home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.Complaint"
            android:label="@string/title_activity_complaint"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.Gallery"
            android:label="@string/title_activity_gallery"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
